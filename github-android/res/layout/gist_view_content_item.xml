<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/grid_repeat"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_gist_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/item_text_color_light"
        android:textStyle="italic" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/item_separator1" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/item_separator2" >
    </LinearLayout>

    <WebView
        android:id="@+id/wv_gist_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="2dp" >
    </WebView>

</LinearLayout>