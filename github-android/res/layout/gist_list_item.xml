<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_gist_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/listing"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/tv_gist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_gist_id"
        android:layout_toRightOf="@id/tv_gist_id"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="@color/item_text_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_gist_creation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_gist_title"
        android:layout_below="@id/tv_gist_id"
        android:paddingLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/listing" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_gist_creation"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_gist_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="1 file"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/listing_comments" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/comment_icon" />

        <TextView
            android:id="@+id/tv_gist_comments"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="3dp"
            android:text="3"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/listing_comments" />
    </LinearLayout>

</RelativeLayout>