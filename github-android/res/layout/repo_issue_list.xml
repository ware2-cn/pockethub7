<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <LinearLayout
        android:id="@+id/ll_issues_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/item_background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_repo_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:singleLine="true"
            android:text="hubot"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/item_text_color"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp" >

            <ImageView
                android:id="@+id/iv_gravatar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/gravatar_icon" />

            <TextView
                android:id="@+id/tv_owner_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="github"
                android:textColor="@color/item_text_color_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/item_separator1" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/item_separator2" >
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_issues_header"
        android:background="@color/background"
        android:fastScrollEnabled="true" >

        <!-- Preview: listitem=@layout/repo_issue_list_item -->
    </ListView>

</RelativeLayout>