<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_gist_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="Gist 1446823"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/item_text_color"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp" >

            <ImageView
                android:id="@+id/iv_gravatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/gravatar_icon" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_gist_author"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignTop="@id/iv_gravatar"
                    android:layout_toRightOf="@id/iv_gravatar"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="hubot"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/item_text_color_light"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_gist_created"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_gist_author"
                    android:layout_toRightOf="@id/iv_gravatar"
                    android:paddingLeft="5dp"
                    android:paddingTop="1dp"
                    android:singleLine="true"
                    android:text="November 02, 2011"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/item_text_color_light"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/item_separator1" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/item_separator2" >
    </LinearLayout>

    <TextView
        android:id="@+id/tv_gist_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="Bind widget disposal to resource disposal"
        android:textColor="@color/item_text_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/item_separator1" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/item_separator2" >
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="@string/files"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/drawer_text_color"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/item_separator3" >
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_gist_files"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/item_divider"
        android:dividerHeight="1px" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/item_separator1" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/item_separator2" >
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="@string/comments"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/drawer_text_color"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/item_separator3" >
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_gist_comments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/item_divider"
        android:dividerHeight="1px" >
    </ListView>

</LinearLayout>